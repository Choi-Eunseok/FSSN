<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:GrpcDemo.Client.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:behaviors="clr-namespace:GrpcDemo.Client.Behaviors"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GrpcDemo.Client.Views.ServerStreamingView"
             x:DataType="vm:ServerStreamingViewModel">
    <UserControl.DataContext>
        <vm:ServerStreamingViewModel />
    </UserControl.DataContext>
    
    <DockPanel Margin="8">
        <ListBox ItemsSource="{Binding Logs}"
                 DockPanel.Dock="Top"
                 Height="250"
                 Margin="0,0,0,8" >
            <Interaction.Behaviors>
                <behaviors:ScrollOnNewItemBehavior />
            </Interaction.Behaviors>
        </ListBox>
        
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Top"
                    VerticalAlignment="Top"
                    Spacing="8">
            <TextBlock Text="Number:"
                       VerticalAlignment="Center"/>
            <TextBox Width="100"
                     Text="{Binding InputNumber, UpdateSourceTrigger=PropertyChanged}"
                     Height="25"/>
            <Button Content="Start Streaming"
                    Command="{Binding StartCommand}"/>
        </StackPanel>
    </DockPanel>
</UserControl>
